@model SistemaInventario.Modelos.ViewModels.InventarioViewModel

@{
    ViewData["Title"] = "NuevoInventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-header bg-info text-light ml-0 row container">
    <div class="col-6 p-2">
        <i class="fas fa-boxes"></i> <strong>Nuevo Inventario</strong>
    </div>
</div>


<form method="post" class="p-2">
    <input asp-for="@Model.Inventario.Id" hidden/>

    <div class="form-group row">
        <div class="col-2" style="text-align:right;">
            <label class="col-form-label" style="text-align:right;">Bodega</label>
        </div>

        <div class="col-4 mb-2">
            @Html.DropDownListFor(b => b.Inventario.BodegaId, Model.BodegaLista,
                new { @class="form-control" })
                <span asp-validation-for="Inventario.BodegaId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
         <div class="col-2" style="text-align:right;">
             <label class="col-form-label" style="text-align:right;">Producto</label>
         </div>

         <div class="col-4">
             <select name="producto" asp-items="Model.ProductoLista" class="form-control"></select>
         </div>

         <dvi class="col-1">
             <label class="col-form-label">Cantidad:</label>
         </dvi>

         <div class="col-1">
             <input name="cantidad" id="cantidadId" class="form-control" maxlength="3" type="number" min="1" value="1"/>
         </div>

         <div class="col-2">
             <button type="submit" class="btn btn-primary" asp-action="AgregarProductoPost" id="btnProducto">
                 <i class="fas fa-plus"></i> Agregar
             </button>
         </div>
    </div>

</form>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");}

        <script>
            $("#btnProducto").click(function(){
                var cantidad = document.getElementById("cantidadId").value;
                if(cantidad.toString()=='' || cantidad<1) {
                    swal("Error", "Seleccione una cantidad correcta", "error");
                    return false;
                }
            });
        </script>
    }



