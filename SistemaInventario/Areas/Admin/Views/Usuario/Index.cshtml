@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Lista de usuarios";

}

<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lista de usuarios</h2>
    </div>

    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-plus"></i> Crear Nuevo Usuario</a>
    </div>

</div>

<br />

<div class="p-4 border rounded">
    <table id="tblDatos" class="table table-striped table-bordered" style="width:100%">
        <thead class="table-dark">
            <tr class="table-info">
                <th>Username</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Role</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts{
    <script src="~/js/usuario.js"></script>
}


